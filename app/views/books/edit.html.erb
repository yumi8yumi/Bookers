
  <h1>Editing Book</h1>
  
  <div class="form">
  
  <%=form_with model:@book,url:update_book_path(@book.id), method: :patch do |f| %>
  
  
  <div class="field">
     <label for="book_title">Title</label>
  <%=f.text_field:title %>
  </div>
  
  <div class="field">
      <label for="book_body">Body</label>  
      <%=f.text_area:body %>
  </div>
  
  </form>
  
  <div class="action">
  <%=f.submit'Update Book'%>
  </div>
  
  <a class="link"><%=link_to"Show",update_book_path(@book.id) %></a>
  <p>|</p>
  <a class="link"><%=link_to"Back",'/books' %></a>
  
  <% end %>
  