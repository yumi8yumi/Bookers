<!DOCTYPE html>
<header>
</header>
<body>
  <h1>Editing Book</h1>
  
  <%=form_with model:@book,url:update_book_path(@book.id), method: :patch do |f| %>
  
  <h4>Title</h4>
  <%=f.text_field:title %>
  
  <h4>Body</h4>
  <%=f.text_area:body %>
  
  <%=f.submit'Update Book'%>
  
  <p><%=link_to"Show",update_book_path(@book.id) %></p>
   <p><%=link_to"Back",'/books' %></p>
  
  <% end %>
  
</body>
